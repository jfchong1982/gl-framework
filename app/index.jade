  // Add your site or application content here
  section.container(ng-controller='AppCtrl')
    // HEADER 
    header.header.fixed-top.clearfix
      .brand
        a.logo(href='index.html')
          img.ph(alt='', ph-img='130x55')
        .sidebar-toggle-box
          .fa.fa-bars

      .nav.notify-row
        ul.nav.top-menu
          li.dropdown
            a.dropdown-toggle(href='javascript:;', data-toggle='dropdown-toggle')
              i.fa.fa-tasks
              span.badge.bg-success 2
            ul.dropdown-menu.extended.tasks-bar
              li
                p You have 2 pending tasks
              li
                a(href='javascript:;')
                  .task-info.clearfix
                    .desc.pull-left
                      h5 Target Sell
                      p 25% , Deadline 12 Juneâ€™13
                    span.notification-pie-chart.pull-right(data-percent='45')
                      span.percent
              li.external
                a(href='javascript:;') See All Tasks
          li.dropdown
            a.dropdown-toggle(href='javascript:;', data-toggle='dropdown')
              i.fa.fa-envelope-o
              span.badge.bg-important 3
            ul.dropdown-menu.extended.inbox
              li
                p.red You have 4 Mails
              li
                a(href='javascript:;')
                  span.photo
                    img(alt='avatar', ph-img='40x40', ng-src='{{photo1}}', style='width:40px; height:40px;')
                  span.subject
                    span.from {{fullname1}}
                    span.time Just now
                  span.message(ph-txt='1s')
              li
                a(href='javascript:;')
                  span.photo
                    img(alt='avatar', ph-img='40x40', ng-src='{{photo2}}', style='width:40px; height:40px;')
                  span.subject
                    span.from {{fullname2}}
                    span.time 2 min ago
                  span.message(ph-txt='1s')
              li
                a(href='javascript:;') See all messages
          li.dropdown
            a.dropdown-toggle(href='javascript:;', data-toggle='dropdown')
              i.fa.fa-bell-o
              span.badge.bg-warning 2
            ul.dropdown-menu.extended.notification
              li
                p Notifications
              li
                .alert.alert-info.clearfix
                  span.alert-icon
                    i.fa.fa-bolt
                  .noti-info
                    a(href='javascript:;', ph-txt='1s')
              li
                .alert.alert-danger.clearfix
                  span.alert-icon
                    i.fa.fa-bolt
                  .noti-info
                    a(href='javascript:;', ph-txt='1s')

      .top-nav.clearfix
        ul.nav.pull-right.top-menu
          li
            input.form-control.search(placeholder='Search')
          li.dropdown
            a.dropdown-toggle(href='javascript:;', data-toggle='dropdown')
              img(alt='', ph-img='29x29', ng-src='{{photo}}', style='width:29px; height:29px;')
              span.username {{fullname}}
              b.caret
            ul.dropdown-menu.extended.logout
              li
                a(href='javascript:;')
                  i.fa.fa-suitcase
                  | Profile
              li
                a(href='javascript:;')
                  i.fa.fa-cog
                  | Settings
              li
                a(href='javascript:;')
                  i.fa.fa-key
                  | Log Out
          li
            .toggle-right-box
              .fa.fa-bars
    
    aside
      #sidebar.nav-collapse
        .leftside-navigation(ng-controller='navigationCtrl')
          ul.sidebar-menu
            li
              a(href='#', ng-class='{active:isActive(\'/\')}')
                i.fa.fa-dashboard
                span Dashboard
            li
              a(href='/#/posts', ng-class='{active:isActive(\'/posts\')}')
                i.fa.fa-book
                span Posts
            li
              a(href='/#/users/login', ng-class='{active:isActive(\'/users/login\')}')
                i.fa.fa-user
                span Log In

    .main-content
      .wrapper
        .row
          .col-sm-12(ng-view='')


